<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.aai.inventorymanagement.Fragments.Home">


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_height="match_parent">

                    <com.balysv.materialripple.MaterialRippleLayout
                        app:mrl_rippleColor="#ffffff"
                        app:mrl_rippleDuration="900"
                        app:mrl_rippleFadeDuration="100"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/additem"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textStyle="bold"
                                android:layout_margin="0.5dp"
                                android:text="ADD NEW ITEM"
                                android:textColor="#ffffff"/>

                            <ImageView

                                android:layout_margin="20dp"
                                android:padding="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="6"
                                android:src="@drawable/ic_add"
                                />

                        </LinearLayout>


                    </com.balysv.materialripple.MaterialRippleLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:background="@color/colorAccent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_height="match_parent">


                    <com.balysv.materialripple.MaterialRippleLayout
                        app:mrl_rippleColor="#ffffff"
                        app:mrl_rippleDuration="900"
                        app:mrl_rippleFadeDuration="100"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/deleteitem"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textStyle="bold"
                                android:layout_margin="0.5dp"
                                android:text="REMOVE ITEM"
                                android:textColor="#ffffff"/>

                            <ImageView

                                android:layout_margin="20dp"
                                android:padding="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="6"
                                android:src="@drawable/ic_remove"
                                />

                        </LinearLayout>


                    </com.balysv.materialripple.MaterialRippleLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:background="@color/colorAccent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_height="match_parent">

                    <com.balysv.materialripple.MaterialRippleLayout
                        app:mrl_rippleColor="#ffffff"
                        app:mrl_rippleDuration="900"
                        app:mrl_rippleFadeDuration="100"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/updatestock"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textStyle="bold"
                                android:layout_margin="0.5dp"
                                android:text="UPDATE STOCK"
                                android:textColor="#ffffff"/>

                            <ImageView

                                android:layout_margin="20dp"
                                android:padding="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="6"
                                android:src="@drawable/ic_update"
                                />

                        </LinearLayout>


                    </com.balysv.materialripple.MaterialRippleLayout>



                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:background="@color/colorAccent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_height="match_parent">

                    <com.balysv.materialripple.MaterialRippleLayout
                        app:mrl_rippleColor="#ffffff"
                        app:mrl_rippleDuration="900"
                        app:mrl_rippleFadeDuration="100"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/viewstock"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textStyle="bold"
                                android:layout_margin="0.5dp"
                                android:text="VIEW STOCK"
                                android:textColor="#ffffff"/>

                            <ImageView

                                android:layout_margin="20dp"
                                android:padding="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="6"
                                android:src="@drawable/ic_view"
                                />

                        </LinearLayout>


                    </com.balysv.materialripple.MaterialRippleLayout>



                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:background="@color/colorAccent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_height="match_parent"
                    >
                    <com.balysv.materialripple.MaterialRippleLayout
                        app:mrl_rippleColor="#ffffff"
                        app:mrl_rippleDuration="900"
                        app:mrl_rippleFadeDuration="100"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/itemRequested"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textStyle="bold"
                                android:layout_margin="0.5dp"
                                android:text="ITEM REQUESTED"
                                android:textColor="#ffffff"/>

                            <ImageView

                                android:layout_margin="20dp"
                                android:padding="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="6"
                                android:src="@drawable/ic_person_add_black_24dp"
                                />

                        </LinearLayout>


                    </com.balysv.materialripple.MaterialRippleLayout>



                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:background="@color/colorAccent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_height="match_parent"
                    >

                    <com.balysv.materialripple.MaterialRippleLayout
                        app:mrl_rippleColor="#ffffff"
                        app:mrl_rippleDuration="900"
                        app:mrl_rippleFadeDuration="100"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/itemAllocated"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textStyle="bold"
                                android:layout_margin="0.5dp"
                                android:text="ITEM ALLOCATED"
                                android:textColor="#ffffff"/>

                            <ImageView

                                android:layout_margin="20dp"
                                android:padding="2dp"
                                android:scaleType="fitCenter"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="6"
                                android:src="@drawable/ic_add_shopping_cart_black_24dp"
                                />

                        </LinearLayout>


                    </com.balysv.materialripple.MaterialRippleLayout>



                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>
