<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.aai.inventorymanagement.Activities.SplashActivity">


    <android.support.v7.widget.AppCompatImageView
        android:layout_width="175dp"
        android:layout_height="200dp"
        android:scaleType="center"
        android:src="@drawable/icon1"
        android:layout_gravity="center"
        android:id="@+id/appCompatImageView"
        android:layout_marginTop="71dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#ffffff"
        android:text="INVENTORY MANAGEMENT"
        android:id="@+id/textView3"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/splash_loading_bar"
        android:layout_centerHorizontal="true" />

    <android.support.v4.widget.ContentLoadingProgressBar
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:id="@+id/splash_loading_bar"
        android:progressDrawable="@drawable/circular_bar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/appCompatImageView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
